{
    "manifest_version": 2,
    "name": "Wiki Viewer",
    "version": "0.0.1",

    //"default_locale": "en",
    "description": "Simple wikipedia search as an extension",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },

    "options_page": "options.html",

    "browser_action": {
        "default_title": "Wiki Viewer",
        "default_popup": "index.html"
    },
    /*
        "content_scripts": [{
            "js": [
                "js/jquery-3.1.1.min.js",
                "js/jquery-ui.min.js",
                "js/options.js",
                "js/app.js",
                "js/bootstrap.min.js"
            ],
            "css": [
                "css/style.css",
                "css/options.css",
                "css/jquery-ui.min.css",
                "css/jquery-ui.theme.min.css",
                "css/font-awesome.min.css",
                "css/bootstrap.min.sandstone.css",
                "css/bootstrap-theme.min.css"
            ]
        }],
    */
    "permissions": [
        "tabs",
        "webRequest",
        "*://*.wikipedia.org/*",
        "http://en.wikipedia.org/w/api.php/*"
    ]

}